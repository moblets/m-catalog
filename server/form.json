{
  "fields": [
    {
      "name": "listStyle",
      "type": "select",
      "required": true,
      "options": [
        { "value": "layout-1", "name": "list_type_1" },
        { "value": "layout-2", "name": "list_type_2" },
        { "value": "layout-3", "name": "list_type_3" }
      ],
      "values": {
        "layout-1": "list_type_1",
        "layout-2": "list_type_2",
        "layout-3": "list_type_3"
      },
      "validations": [{ "name": "required" }]
    },
    {
      "name": "currency",
      "type": "selectCurrency",
      "required": true,
      "validations": [{ "name": "required" }]
    },
    {
      "name": "shoppingCart",
      "type": "toggle",
      "help": {
        "url": "https://ajuda.fabapp.com/pt-BR/articles/4477549-catalogo"
      },
      "conditions": ["appLogin"]
    },
    {
      "name": "ddi"
    },
    {
      "name": "phone",
      "type": "inputTel",
      "hidden": [{ "name": "shoppingCart", "value": true }],
      "required": true,
      "validations": [{ "name": "required" }, { "name": "phoneNumber" }]
    },
    {
      "name": "deliveryMethod",
      "type": "multipleToggles",
      "required": true,
      "validations": [{ "name": "required" }],
      "options": [
        { "id": 1, "name": "delivery" },
        { "id": 2, "name": "takeaway" }
      ]
    },
    {
      "name": "takeawayAddress",
      "type": "input",
      "hidden": [{ "name": "deliveryMethod", "value": 2 }],
      "required": true,
      "validations": [{ "name": "required" }]
    },
    {
      "name": "takeawayAddressNumber",
      "type": "input",
      "hidden": [{ "name": "deliveryMethod", "value": 2 }],
      "required": true,
      "validations": [{ "name": "required" }]
    },
    {
      "name": "takeawayAddressComplement",
      "type": "input",
      "hidden": [{ "name": "deliveryMethod", "value": 2 }]
    },
    {
      "name": "items",
      "type": "list",
      "fields": [
        {
          "name": "title",
          "type": "input",
          "inputType": "text",
          "required": true,
          "minlength": 1,
          "maxlength": 100,
          "validations": [
            { "name": "required" },
            { "name": "minLength", "value": 1 },
            { "name": "maxLength", "value": 100 }
          ]
        },
        {
          "name": "resume",
          "type": "input",
          "inputType": "text",
          "minlength": 1,
          "maxlength": 30,
          "validations": [
            { "name": "minLength", "value": 1 },
            { "name": "maxLength", "value": 30 }
          ]
        },
        {
          "name": "currency",
          "type": "input",
          "inputType": "text",
          "maxlength": 3,
          "validations": [{ "name": "maxLength", "value": 3 }]
        },
        {
          "name": "value",
          "type": "inputPrice",
          "required": true,
          "maxlength": 50,
          "validations": [
            { "name": "required" },
            { "name": "maxLength", "value": 50 }
          ]
        },
        {
          "name": "promoValue",
          "type": "inputPrice",
          "maxlength": 50,
          "validations": [{ "name": "maxLength", "value": 50 }]
        },
        {
          "name": "image",
          "type": "imageUploader",
          "api": "moblet-api",
          "fileConfig": [
            { "title": "requiredField" },
            { "title": "maxSize", "value": "12MB" },
            { "title": "fileFormat", "value": "PNG, JPG, JPEG" }
          ],
          "formats": ["image/png", "image/jpg", "image/jpeg", "image/gif"],
          "maxSize": 12000000,
          "validations": [{ "name": "required" }]
        },
        {
          "name": "images",
          "type": "multipleImagesUploader",
          "api": "moblet-api",
          "fileConfig": [
            { "title": "suggestedAspectRatio", "value": "750 x 600 pixels" },
            { "title": "maxSize", "value": "12MB" },
            { "title": "fileFormat", "value": "PNG, JPG, JPEG" }
          ],
          "formats": ["image/png", "image/jpg", "image/jpeg"],
          "maxImages": 5,
          "maxSize": 12000000
        },
        {
          "name": "youtubeLink",
          "type": "input",
          "inputType": "url",
          "placeholder": "https://www.youtube.com/watch?v=Nrwom2TleF8",
          "pattern": "(https?)?(?:.+?)?(?:\/v\/|watch\/|[?]v=|&v=|youtu.be\/|\/v=|^youtu.be\/|watch%3Fv%3D)([a-zA-Z0-9_&=%-]+)",
          "validations": [
            { "name": "pattern", "value": "(https?)?(?:.+?)?(?:\/v\/|watch\/|[?]v=|&v=|youtu.be\/|\/v=|^youtu.be\/|watch%3Fv%3D)([a-zA-Z0-9_&=%-]+)" }
          ]
        },
        {
          "name": "description",
          "type": "richtext",
          "required": true,
          "minlength": 3,
          "maxlength": 12000,
          "validations": [
            { "name": "required" },
            { "name": "minLength", "value": 3 },
            { "name": "maxLength", "value": 12000 }
          ]
        }
      ]
    }
  ]
}
