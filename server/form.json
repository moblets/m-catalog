{
  "fields": [
    {
      "name": "items",
      "type": "list",
      "fields": [
        {
          "name": "title",
          "type": "input",
          "inputType": "text",
          "required": true,
          "minlength": 1,
          "maxlength": 100,
          "validations": [
            { "name": "required" },
            { "name": "minLength", "value": 1 },
            { "name": "maxLength", "value": 100 }
          ]
        },
        {
          "name": "resume",
          "type": "input",
          "inputType": "text",
          "minlength": 1,
          "maxlength": 30,
          "validations": [
            { "name": "minLength", "value": 1 },
            { "name": "maxLength", "value": 30 }
          ]
        },
        {
          "name": "value",
          "type": "inputPrice",
          "maxlength": 50,
          "validations": [{ "name": "maxLength", "value": 50 }]
        },
        {
          "name": "promoValue",
          "type": "inputPrice",
          "maxlength": 50,
          "validations": [{ "name": "maxLength", "value": 50 }]
        },
        {
          "name": "image",
          "type": "imageUploader",
          "api": "moblet-api",
          "fileConfig": [
            { "title": "requiredField" },
            { "title": "maxSize", "value": "12MB" },
            { "title": "fileFormat", "value": "PNG, JPG, JPEG" }
          ],
          "formats": ["image/png", "image/jpg", "image/jpeg", "image/gif"],
          "maxSize": 12000000,
          "required": true,
          "validations": [{ "name": "required" }]
        },
        {
          "name": "description",
          "type": "richtext",
          "required": true,
          "minlength": 3,
          "maxlength": 12000,
          "validations": [
            { "name": "required" },
            { "name": "minLength", "value": 3 },
            { "name": "maxLength", "value": 12000 }
          ]
        }
      ]
    },
    {
      "name": "currency",
      "type": "selectCurrency",
      "required": true,
      "validations": [{ "name": "required" }]
    },
    {
      "name": "listStyle",
      "type": "select",
      "required": true,
      "options": [
        { "value": "layout-1", "name": "list_type_1" },
        { "value": "layout-2", "name": "list_type_2" },
        { "value": "layout-3", "name": "list_type_3" }
      ],
      "values": {
        "layout-1": "list_type_1",
        "layout-2": "list_type_2",
        "layout-3": "list_type_3"
      },
      "validations": [{ "name": "required" }]
    },
    {
      "name": "shoppingCart",
      "type": "toggle"
    },
    {
      "name": "ddi"
    },
    {
      "name": "phone",
      "type": "inputTel",
      "hidden": "shoppingCart",
      "required": true,
      "validations": [{ "name": "required" }, { "name": "phoneNumber" }]
    }
  ]
}
